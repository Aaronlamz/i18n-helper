{
	"name": "i18n-helper",
	"publisher": "AaronLam",
	"displayName": "i18n-helper",
	"description": "One-click i18n extraction tool for VSCode plugin",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:javascriptreact",
		"onLanguage:javascript",
		"onLanguage:html",
		"onLanguage:vue",
		"onCommand:i18n-helper.initPath",
		"onCommand:i18n-helper.customizePath"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "i18n-helper.initPath",
				"title": "i18n-helper:初始化默认文件目录配置"
			},
			{
				"command": "i18n-helper.customizePath",
				"title": "i18n-helper:自定义文件目录配置"
			}
		],
		"configuration": {
			"type": "object",
			"title": "i18n-helper",
			"properties": {
				"i18n-helper.i18nPaths": {
					"type": "string",
					"default": "",
					"description": "语言包文件的目录（相对于项目根目录）"
				}
			}
		},
    "menus": {
      "editor/context": [
        {
          "command": "i18n-helper.initPath",
          "when": "resourceLangId == vue",
          "group": "navigation"
        }
      ]
    }
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-prettier": "^4.0.0",
		"fast-glob": "^3.2.11",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"prettier": "^2.5.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"@babel/core": "^7.17.5",
		"@babel/preset-env": "^7.16.11",
		"@babel/preset-typescript": "^7.16.7",
		"@babel/traverse": "^7.17.3",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.7.0",
		"babel-traverse": "^6.26.0",
		"babylon": "^6.18.0"
	}
}
